variable "KeyPair_pub" {
  type        = string
  default     = "ssh-rsa "
  description = "Provide your ssh public key, or use included one."
}
variable "aws_inst_type" {
  type        = string
  default     = "t2.micro"
  description = "Instance Type"
}
variable "aws_ami_id" {
  // us-east-1 only
  type        = string
  default     = "ami-0885b1f6bd170450c"
  description = "Image ID ami-0885b1f6bd170450c - for Ubuntu 20.04 LTS or ami-0be2609ba883822ec for AmazonLinux"
}
variable "add_elastic_ip" {
  type        = bool
  default     = false
  description = "Attach elastic IP"
}
variable "aws_ebs_size" {
  type        = number
  default     = 8
  description = "Additional EBS size 8-20 Gb"
  validation {
    condition     = var.aws_ebs_size >= 8 || var.aws_ebs_size <= 20
    error_message = "From 8 to 20 Gb only."
  }
}